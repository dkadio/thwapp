<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:background="@color/ThwBlue">

        <TextView
            android:id="@+id/tvtreesize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/ThwBlue"
            android:text="@string/treesize"
            android:textColor="@color/white" />

        <ProgressBar
            android:id="@+id/pbloadtreeview"
            android:layout_width="40dp"
            android:layout_height="17dp"
            android:layout_weight="0.01" 
            android:visibility="invisible"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightGrey" >

        <TextView
            android:id="@+id/tvpath"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/LightGrey"
            android:gravity="center|left"
            android:text="@string/path"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btntest"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onClickGoButton"
            android:text="@string/go"
            android:textColor="@color/ThwBlue" />

    </LinearLayout>

    <proj.thw.app.treeview.TreeViewList
        android:id="@+id/tvlequip"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </proj.thw.app.treeview.TreeViewList>

</LinearLayout>
